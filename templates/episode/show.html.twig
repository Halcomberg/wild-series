{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ episode.duration }} minutes</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ episode.season.number }}</td>
            </tr>
            <tr>
                <th>Série</th>
                <td>{{ episode.season.program.title }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ episode.season.program.category.name }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_episode_index') }}">back to list</a>

    <a href="{{ path('app_episode_edit', {slug: episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
