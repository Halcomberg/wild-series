{% extends 'base.html.twig' %}

{% block title %}Wild Series | {{ program.title }}{% endblock %}

{% block body %}
    <article>
        Nom de la série : {{ program.title }}
        <br>
        Saison n°{{ season.number }} <br>
        Episode n° {{ episode.number }} : {{ episode.title }}<br>
        Résumé :<br>
        {{ episode.synopsis }}<br>
        Durée :<br>
        {{ episode.duration }} minutes
        <br>
        <a href="{{ path('program_season_show', { slug: program.slug, number: season.number }) }}">Revenir à la liste des épisodes</a>
    </article>

{% endblock %}