{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <h1>{{ actor.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ actor.birthdate|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Apparition dans les séries</th>
                <td>
                    {% for program in actor.programs %}
                        <li><a href="{{ path('program_show', { slug: program.slug }) }}">{{ program.title }}</a></li>
                    {% else %}
                        <li>Cet acteur ne joue dans aucune série</li>
                    {% endfor %}
                </td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {slug: actor.slug}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
