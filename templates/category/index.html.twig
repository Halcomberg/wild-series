{% extends 'base.html.twig' %}

{% block title %}Wild Series | Catégories{% endblock %}

{% block body %}
<h1>Liste des catégories :</h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            <a href="{{ path('category_show', { category: category.id }) }}">Voir les série de la catégorie</a>
        </div>
    {% else %}
        Auncune catégorie trouvée.
    {% endfor %}
        <a href="{{ path('app_index') }}">
        Retour à l'accueil
        </a>
{% endblock %}